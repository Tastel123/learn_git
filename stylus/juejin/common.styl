$fz = 14px
$bg_color = #f4f5f5
$text_color = #333333
$text_color_normal = #666666

border-radius(num)
    -webkit-border-radius num 
    -moz-border-radius num      //火狐
    -ms-border-radius num      //微软
    -o-border-radius num      //opera
    border-radius num

html 
    font-size $fz
    font-family -apple-system, sans-serif
    background-color $bg_color
    text-rendering optimizeLegibility
    color $text_color 

body    
    font-size $fz
    margin 0
    overflow-y scroll
    -webkit-overflow-scrolling touch 
    
a.button 
    border-radius(50%)

.book-card
    max-width 720px
    width 100%
    margin 0 auto 12px 
    position relative
    box-shadow 0 1px 2px 0 rgba(0,0,0,.15)
    background-color #ffffff
.book-bought
    display flex
    padding 8px 22px 8px 15px
    border-top 1px solid #ecf0f3 
    cursor pointer
    align-items center
    .label
    //display inline-flex
        color $text_color_normal
        font-weight 400px
        font-size 16px    
        display inline-flex
        align-items center
        flex-shrink 0  //左边防止挤压
    .users
        height 24px
        margin-left 24px
        flex-grow 1 
        display flex
        overflow hidden //右边多余隐藏
        flex-wrap wrap //到下一行 
        .user
            border-radius(50%)
            width 24px
            height 24px
            background-size cover
            background-repeat no-repeat
            background-position 50%
            flex-shrink 0  //右边防止挤压变形
            margin-left 10px
            &:first-child
                margin-left 0px

    